@using WebApplication10.Data.Entities
@using WebApplication10.Services
@using WebApplication10.Services.Implementations


@inject IEmployeeService employeeServices

@{
    IList<Employee> employees = employeeServices.GetEmployees();
}

<h1>Список сотрудников</h1>
<hr />

@if (employees.Count < 1)
{
 
    <p>Список сотрудников пуст</p>
}

<ol>
    @foreach (Employee employee in employees)
    {
        <li>
            <a asp-controller="Employee" asp-action="GetById" asp-route-id="@employee.Id">
                @employee.FirstName @employee.LastName (@employee.Email)
            </a>            
        </li>
    }
</ol>